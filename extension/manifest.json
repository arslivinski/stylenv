{
  "manifest_version": 3,
  "name": "StylENV",
  "description": "Style specific environments",
  "version": "1.0.0",
  "author": "Anderson Roberto Slivinski",
  "homepage_url": "https://github.com/arslivinski/stylenv",

  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },

  "permissions": ["scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },

  "options_page": "options/options.html",
  "action": {
    "default_popup": "options/options.html"
  }
}
